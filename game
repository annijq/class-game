class Dragon:
    count = 0
    dictionary = dict()

    def __init__(self, name, energy):
        Dragon.count += 1
        self.name = name
        self.energy = energy
        self.health = 100
        Dragon.dictionary[self.name] = self

    def introduce(self):
        print(f"Hey, my name is {self.name}.")

    def status(self):
        print(f"ðŸ“ƒ Name: {self.name} Energy: {self.energy} Health: {self.health}")

    def attack(self, target):
        if self.energy < 50:
            print("âš¡ Not enough energy!")
            return
        
        print(f"ðŸ’¥ {self.name} attacks {target.name}!")
        self.energy -= 50
        target.health -= 30


def main():
    human1 = Human("Anna")
    human2 = Human("Oskars")

    wizard1 = Wizard("Gandalf", 200)

    dragon1 = Dragon("Blue", 100)

    for i in range(3):
        dragon1.attack(human1)
        human1.status()
        dragon1.status()

    for human in Human.dictionary:
        print(human)


main()
